<div class="header">People that have used Ski Trip Planner</div>
<div class="text-center">
    <a href="/">
        <button class="btn btn-info">
            Create User
        </button>
    </a>
</div>

<div class="user-cards">
    {{#each allUsers}}
    <div class="card bg-light mb-3" style="width: 18rem;">
        <div class="card-header">{{name}}</div>
        <div class="card-body">
            {{!-- <h4 class="card-title">{{name}}</h4> --}}
            <p class="card-text">Experience: {{skillLevel}}</p>
            <p class="card-text">Activity: {{skiOrSnowboard}}</p>
            <a href="/user/{{_id}}" class="btn btn-outline-info">View this user</a>
        </div>
    </div>
    {{/each}}
</div>